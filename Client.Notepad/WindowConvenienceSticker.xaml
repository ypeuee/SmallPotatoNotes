<Window x:Class="Client.Notepad.WindowConvenienceSticker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowConvenienceSticker" Height="322" Width="399" Loaded="WindowConvenienceSticker_OnLoaded" Closing="WindowConvenienceSticker_OnClosing">
    <Grid>
        <RichTextBox Name="RichTextBox1" Margin="20,51,21,116">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Name="BtnAddImage" Content="添加图片" HorizontalAlignment="Left" Margin="240,20,0,0" VerticalAlignment="Top" Width="75" Click="BtnAddImage_OnClick"/>
        <TabControl TabStripPlacement="Left"  HorizontalAlignment="Left" Height="80" Margin="45,180,0,0" VerticalAlignment="Top" Width="285">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
